@{
    ViewData["Title"] = "Classes";
}
<body>
    <h1>Classes</h1>
</body>
<div id="wrapperDiv">

    <div id="div1" style="padding:20px;float:left" class="col-sm-10">
        <table class="table table-bordered table-striped">
            <colgroup>
                <col span="1" style="width: 50%">
                <col span="1" style="width: 30%;">
                <col span="1" style="width: 20%;">
            </colgroup>
            <thead>
                <tr>
                    <th>Class Name</th>
                    <th>Start Time</th>
                    <th>Length</th>
                    <th></th>
            </thead>
            <tbody>
                @foreach (var Class in Model.Classes)
                {
                    <tr>
                        <td>@Class.ClassName</td>
                        <td>@Class.ClassStartTime</td>
                        <td>@Class.ClassLength Hour(s)</td>
                        <td>
                            <form asp-action="ClassInformation" method="post">
                                <button type=""
                                        class="btn btn-primary btn-sm">
                                    Information
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <<div id="div2" style="padding:20px;float:left">
        <a asp-controller="Event" asp-action="AddClass">
            <img class="addIcon" src="~/images/AddButtonIcon.png" alt="Import From Canvas Button" width="60" height="60" />
        </a>
    </div>
    <<div id="div3" style="padding:20px;float:left">
        <a asp-controller="Event" asp-action="CanvasPull">
            <img class="addIcon" src="~/images/CanvasIcon.png" alt="Import From Canvas Button" width="70" height="70" />
        </a>
    </div>
</div>