@{
    ViewData["Title"] = "Classes";
}
<body>
    <h1>Classes</h1>
    <div>
        <form asp-controller="Event" asp-action="AddClass">
            <button type="submit" class="btn btn-primary btn-sm"> Input Class </button>
        </form>
        <form asp-controller="Event" asp-action="CanvasList">
            <img class="" src="~/images/CanvasIcon.png" alt="Import From Canvas Button" width="70" height="70" />
            <button type="submit" class="btn btn-primary btn-sm"> Import  </button>
        </form>
    </div>
</body>
<div>

    <div id="div1" style="padding:0px;float:left" class="col-sm-10">
        <table style="width:100%" class="table table-bordered table-striped">
            <colgroup>
                <col span="1" style="width: 50%;">
                <col span="1" style="width: 20%;">
                <col span="1" style="width: 20%;">
                <col span="1" style="width: 10%;">
            </colgroup>
            <thead>
                <tr>
                    <th>Class Name</th>
                    <th>Meeting Day(s)</th>
                    <th>Start Time</th>
                    <th>Course Length</th>
                    <th>Credit Hours</th>
            </thead>
            <tbody>
                @foreach (var C in Model.Classes)
                {
                    <tr>
                        <td>@C.ClassName</td>
                        <td>@C.ClassStartTime</td>
                        <td> Hour(s)</td>
                        <td></td>
                        <td>
                            <form asp-action="DeleteClass" method="post">
                                <input type="hidden"
                                       name="@nameof(Class.ClassId)" value="@C.ClassId" />
                                <button type="submit"
                                        class="btn btn-primary btn-sm">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    </br>
</div>


