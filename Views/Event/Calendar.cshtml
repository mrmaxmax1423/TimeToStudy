@model EventViewModel
@{
    ViewData["Title"] = "Calendar";
}
<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title> Calendar</title>
    </head>
<body>
    <h1>Calendar</h1>
</body>
<div class="row">
    <div class="col-sm-4">
        <div class="list-group">
            <a asp-controller="Event" asp-action="AddEvent">
                <img class="addIcon" src="~/images/AddButtonIcon.png" alt="Add Class Button" width="30" height="30" /></a>
        </div>
    </div>


    <div class="col-sm-10">
        <table style="width:65%" class="table table-bordered table-striped">
            <colgroup>
                <col span="1" style="width: 20%;">
                <col span="1" style="width: 40%;">
                <col span="1" style="width: 20%;">
                <col span="1" style="width: 20%;">
            </colgroup>
            <thead>
                <tr>
                    <th>Event Label</th>
                    <th>Desciption</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th></th>
</thead>
            <tbody>
                @foreach (var Event in Model.Events)
                {
                <tr>
                    <td>@Event.EventLabel</td>
                    <td>@Event.EventDescription</td>
                    <td>@Event.EventTime</td>
                    <td>@Event.EventTime</td>
                    <td>
                        <input type="hidden"
                               name="@nameof(Event.EventId)" value="@Event.EventId" />
                        <form asp-action="DeleteEvent" method="post">
                            <button type="submit"
                                    class="btn btn-primary btn-sm">
                                Delete
                            </button>
                        </form>
                         <form asp-action="Edit" method="post">
                            <button type="Edit"
                                    class="btn btn-primary btn-sm">
                                Edit
                            </button>
                        </form>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>

</html>