@model EventViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title> Calendar</title>
    </head>
<body>
    <h1>Calendar</h1>
</body>
<div class="row">
    <div class="col-sm-4">
        <div class="list-group">
            <a asp-controller="Event" asp-action="AddEvent"
               class="list-group-item">Add New Event</a>
        </div>
    </div>


    <div class="col-sm-10">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Event Label</th>
                    <th>Desciption</th>
                    <th>Event Time</th>
            </thead>
            <tbody>
                @foreach (var Event in Model.Events)
                {
                <tr>
                    <td>@Event.EventLabel</td>
                    <td>@Event.EventDescription</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</html>