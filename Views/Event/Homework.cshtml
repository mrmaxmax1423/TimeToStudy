@model EventViewModel
@{
    ViewData["Title"] = "Homework";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Events</title>
</head>
<body>
    <h1>Homework</h1>
</body>
<div class="row">

    <div class="col-sm-10">
        <table style="width:65%" class="table table-bordered table-striped">
            <colgroup>
                <col span="1" style="width: 20%;">
                <col span="1" style="width: 40%;">
                <col span="1" style="width: 20%;">
                <col span="1" style="width: 20%;">
            </colgroup>
            <thead>
                <tr>
                    <th>Event Label</th>
                    <th>Desciption</th>
                    <th>Event Time</th>
                    <th>Length</th>
                    <th></th>
            </thead>
            <tbody>
                @foreach (Event E in Model.Events)
                {
                    <tr>
                        <td>@E.EventLabel</td>
                        <td>@E.EventDescription</td>
                        <td>@E.EventTime</td>
                        <td>@E.EventLength</td>
                        <td>
                            <form asp-action="DeleteEvent" method="post">
                                <input type="hidden"
                                       name="@nameof(Event.EventId)" value="@E.EventId" />
                                <button type="submit"
                                        class="btn btn-primary btn-sm">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="col-sm-4">
            <div class="list-group">
                <form asp-controller="Event" asp-action="AddEvent">
                    <button type="submit" class="btn btn-primary btn-sm"> Add Event </button>
                </form>
            </div>
        </div>
    </div>

</html>